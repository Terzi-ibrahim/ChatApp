@model ChatApp.ViewModels.Account.RegisterViewModel

<section class="min-vh-100 gradient-custom">


    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-12 col-md-8 col-lg-6 col-10">
                <div class="card bg-dark text-white" style="border-radius: 1rem;">
                    <div class="card-body p-5 text-center">
                        <div class="mb-md-5 mt-md-4 pb-5">

                            <h2 class="fw-bold mb-2 text-uppercase">Login</h2>
                            <p class="text-white-50 mb-5">Please Sing  Up!</p>
                            <form asp-action="Register" asp-controller="Account" method="post">
                            
                                <div data-mdb-input-init class="form-outline form-white mb-4">
                                    <input asp-for="Name" class="form-control form-control-lg" />
                                    <label asp-for="Name" class="form-label">Name</label>
                                </div>

                                <div data-mdb-input-init class="form-outline form-white mb-4">
                                    <input asp-for="Surname" class="form-control form-control-lg" />
                                    <label asp-for="Surname" class="form-label">Surname</label>
                                </div>
                                <div data-mdb-input-init class="form-outline form-white mb-4">
                                    <input asp-for="UserName" class="form-control form-control-lg" />
                                    <label asp-for="UserName" class="form-label">UserName</label>
                                </div>
                                <div data-mdb-input-init class="form-outline form-white mb-4">
                                    <input asp-for="Email" class="form-control form-control-lg" />
                                    <label asp-for="Email" class="form-label">Email</label>
                                </div>

                                <div data-mdb-input-init class="form-outline form-white mb-4">
                                    <input asp-for="Phone" class="form-control form-control-lg" />
                                    <label asp-for="Phone" class="form-label">Phone</label>
                                </div>   

                                <div data-mdb-input-init class="form-outline form-white mb-4">
                                    <input asp-for="Password" type="password" class="form-control form-control-lg" />
                                    <label asp-for="Password" class="form-label">Password</label>
                                </div>

                                <button type="submit"
                                        class="btn btn-primary btn-lg btn-block"
                                        style="background-color: #3b5998">
                                    Sign Up
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
